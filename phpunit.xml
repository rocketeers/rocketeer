<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
		 backupStaticAttributes="false"
		 bootstrap="tests/_start.php"
		 colors="true"
		 convertErrorsToExceptions="true"
		 convertNoticesToExceptions="true"
		 convertWarningsToExceptions="true"
		 processIsolation="false"
		 stopOnFailure="false"
		 syntaxCheck="false"
>

  <logging>
    <log type="coverage-html" target="tests/coverage" charset="UTF-8"
       highlight="true" lowUpperBound="35" highLowerBound="70" />
    <log type="coverage-text" target="tests/meta/coverage.txt" />
  </logging>

  <filter>
    <whitelist>
      <directory>src/Rocketeer</directory>
      <exclude>
      	<file>src/Rocketeer/RocketeerServiceProvider.php</file>
		  	<directory>src/Rocketeer/Commands</directory>
		  	<directory>src/Rocketeer/Facades</directory>
      </exclude>
    </whitelist>
  </filter>

	<testsuites>
		<testsuite name="Package Test Suite">
			<directory suffix=".php">tests</directory>
		</testsuite>
	</testsuites>
</phpunit>